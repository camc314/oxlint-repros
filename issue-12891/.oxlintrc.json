{
  "ignorePatterns": ["**/*.d.ts"],
  "plugins": ["typescript", "unicorn", "oxc", "import", "jsdoc", "promise", "node"],
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "pedantic": "error",
    "perf": "error",
    "style": "error",
    "restriction": "error",
    "nursery": "error"
  },
  "rules": {
    "init-declarations": "off",
    "eslint/no-restricted-imports": [
      "error",
      {
        "paths": [{ "name": "lodash", "message": "Please use lodash-es instead" }],
        "patterns": [{ "group": ["firebase-admin*"], "message": "Use firebase instead" }]
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/*.test.ts"],
      "rules": {
        "eslint/no-restricted-imports": "off"
      }
    }
  ]
}
